$result = 0;
while(true)
{
	if (!isset($_POST['register'])) break;
	
	if (isset($_POST['user_name']) && isset($_POST['password']))
	{
		if (($username = $db->check_user($_POST['user_name'])) == NULL)
		{
			echo 'Username inválido: deve conter no mínimo 5 caracteres alfanuméricos';
			break;
		}
		if (($password = $db->check_password($_POST['password'])) == NULL)
		{
			echo 'Password inválida: deve conter no mínimo 8 caracteres';
			break;
		}
		if ($_SESSION['user']['level'] < $_POST['level'])
		{
			echo 'Não pode criar utilizadores nivel superior ao seu.';
			break;
		}
		$result = $db -> register_user($username,$password,$_POST['level'],$_SESSION['user']['id']);
		if ($result < 0)
			echo 'Utilizador já existente';
	}
	break;
}
	
if ($result <= 0) 
	echo '
